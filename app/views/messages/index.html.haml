%html
  %head
    %meta{content: "text/html; charset=utf-8", "http-equiv": "Content-Type"}/
  %body
  .wrapper
    = render 'shared/side_bar'

    .chat-main
      .main-header
        .main-header__left-box
          %h2.main-header__left-box__current-group 
            test-group
          %ul.main-header__left-box__member-list 
            Member：
            %li.main-header__left-box__member-list--name
              test-member
        = link_to 'groups/1/edit' do
          .main-header__edit-btn
            Edit
      .messages
        .message
          .message__upper-info
            %p.message__upper-info--user
              test-user
            %p.message__upper-info--date
              2019/07/11(fri) 13:26
          .message__text
            こんにちは！
        .message    
          .message__upper-info
            %p.message__upper-info--user
              test-user
            %p.message__upper-info--date
              2019/07/11(fri) 13:30
          .message__text
            さようなら
      .form
        = form_for [@group, @message] do |f|
          .new-message
            .form-comment
              = f.text_field :content, class: 'form-comment__text', placeholder: 'type a message'
              = f.label :image, class: 'form-comment__image' do
                = fa_icon 'picture-o', class: 'img'
                = f.file_field :image, class: 'form-comment__file'
            = f.submit 'Send', class: 'send-btn'